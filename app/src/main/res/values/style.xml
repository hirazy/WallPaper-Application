<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CodeFont" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Light Mode -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ff0</item>
        <item name="colorPrimaryDark">#ff0</item>
        <item name="colorAccent">#ff0</item>
        <item name="backgroundColor">#FFFFFF</item>
        <item name="cardBackgroundColor">#FFFFFF</item>
        <item name="textColor">#302F2F</item>
        <item name="tintColor">#000000</item>
        <item name="buttonColor">#00BCD4</item>
    </style>

    <!-- Night Mode -->
    <style name="darkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#1B1A1A</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">#303030</item>
        <item name="cardBackgroundColor">#1C1C1C</item>
        <item name="textColor">#FFFFFF</item>
        <item name="tintColor">#FFFFFF</item>
        <item name="buttonColor">#00BCD4</item>
    </style>


    <style name="LoadingDialog" parent="ThemeOverlay.AppCompat.Light">
        <item name="windowMinWidthMajor">100%</item>
        <item name="windowMinWidthMinor">100%</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme_Light" parent="AppTheme">
        <item name="btn_color">#000000</item>
        <item name="metaTextColor">#606060</item>
        <item name="bgColor">#ffffff</item>
    </style>

    <style name="AppTheme_Dark" parent="AppTheme">
        <item name="btn_color">#FFFFFF</item>
        <item name="metaTextColor">#606060</item>
        <item name="bgColor">#131313</item>
    </style>

    <style name="ThemeOverlay.MyTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/patua_one</item>
    </style>
</resources>